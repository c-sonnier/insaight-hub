<%= form_with model: [:admin, user], class: "space-y-4" do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <div>
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc list-inside">
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :name, class: "label" do %>
      <span class="label-text">Name</span>
    <% end %>
    <%= form.text_field :name, class: "input input-bordered w-full", required: true %>
  </div>

  <div class="form-control">
    <%= form.label :email_address, class: "label" do %>
      <span class="label-text">Email</span>
    <% end %>
    <%= form.email_field :email_address, class: "input input-bordered w-full", required: true %>
  </div>

  <div class="form-control">
    <%= form.label :password, class: "label" do %>
      <span class="label-text">Password<%= " (leave blank to keep current)" unless user.new_record? %></span>
    <% end %>
    <%= form.password_field :password, class: "input input-bordered w-full", required: user.new_record?, autocomplete: "new-password" %>
  </div>

  <div class="form-control">
    <%= form.label :password_confirmation, class: "label" do %>
      <span class="label-text">Confirm Password</span>
    <% end %>
    <%= form.password_field :password_confirmation, class: "input input-bordered w-full", required: user.new_record?, autocomplete: "new-password" %>
  </div>

  <div class="form-control">
    <label class="label cursor-pointer justify-start gap-4">
      <%= form.check_box :admin, class: "checkbox checkbox-primary" %>
      <span class="label-text">Administrator</span>
    </label>
  </div>

  <div class="form-control mt-6">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_users_path, class: "btn btn-ghost" %>
  </div>
<% end %>
