<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold">My Insights</h1>
  </div>

  <% if @insight_items.empty? %>
    <div class="text-center py-12">
      <p class="text-base-content/60 text-lg">You haven't created any insights yet.</p>
      <p class="mt-2">
        <%= link_to "Create your first insight", new_insight_item_path, class: "link link-primary" %>
      </p>
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Audience</th>
            <th>Status</th>
            <th>Files</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @insight_items.each do |insight_item| %>
            <%= render "my_insight_row", insight_item: insight_item %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
