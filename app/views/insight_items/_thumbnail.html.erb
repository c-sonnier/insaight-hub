<div id="insight_item_thumbnail_<%= insight_item.id %>" class="w-full aspect-video bg-base-200 rounded-t-xl overflow-hidden">
  <% if insight_item.thumbnail_generating? %>
    <%# Generating state - show animated placeholder %>
    <div class="w-full h-full flex flex-col items-center justify-center gap-2 animate-pulse">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8 text-base-content/30">
        <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A1.5 1.5 0 0 0 21.75 19.5V4.5A1.5 1.5 0 0 0 20.25 3H3.75A1.5 1.5 0 0 0 2.25 4.5v15a1.5 1.5 0 0 0 1.5 1.5Z" />
      </svg>
      <span class="text-xs text-base-content/40">Generating preview...</span>
    </div>
  <% elsif insight_item.thumbnail.attached? %>
    <%# Thumbnail ready - show the image %>
    <%= image_tag insight_item.thumbnail, class: "w-full h-full object-cover object-top", alt: "Preview of #{insight_item.title}" %>
  <% else %>
    <%# No thumbnail - show default placeholder %>
    <div class="w-full h-full flex flex-col items-center justify-center gap-2 bg-gradient-to-br from-base-200 to-base-300">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10 text-base-content/20">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
      </svg>
    </div>
  <% end %>
</div>
