<%
  page_title "Insights"
  page_description "Browse and discover AI-generated insights. Search by audience, tags, or keywords to find the knowledge you need."
%>

<div class="container mx-auto px-4 py-8" data-controller="live-updates" data-live-updates-account-id-value="<%= current_account.id %>">
  <div class="mb-8">
    <h1 class="text-3xl font-bold">Insights</h1>
  </div>

  <div class="flex flex-wrap gap-4 mb-6 items-center">
    <div class="flex gap-2 items-center">
      <span class="text-sm text-base-content/70">Audience:</span>
      <%= link_to "All", insight_items_path(sort: params[:sort], member_id: params[:member_id]), class: "btn btn-sm #{params[:audience].blank? ? 'btn-primary' : 'btn-ghost'}" %>
      <%= link_to "Developer", insight_items_path(audience: "developer", sort: params[:sort], member_id: params[:member_id]), class: "btn btn-sm #{params[:audience] == 'developer' ? 'btn-primary' : 'btn-ghost'}" %>
      <%= link_to "Stakeholder", insight_items_path(audience: "stakeholder", sort: params[:sort], member_id: params[:member_id]), class: "btn btn-sm #{params[:audience] == 'stakeholder' ? 'btn-primary' : 'btn-ghost'}" %>
      <%= link_to "End User", insight_items_path(audience: "end_user", sort: params[:sort], member_id: params[:member_id]), class: "btn btn-sm #{params[:audience] == 'end_user' ? 'btn-primary' : 'btn-ghost'}" %>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-sm text-base-content/70">Member:</span>
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-sm <%= @selected_member ? 'btn-secondary' : 'btn-ghost' %> gap-2">
          <% if @selected_member %>
            <%= user_avatar_or_initials(@selected_member, size: "w-5") %>
            <span class="max-w-24 truncate"><%= @selected_member.name %></span>
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
              <path d="M18 21a8 8 0 0 0-16 0"></path>
              <circle cx="10" cy="8" r="5"></circle>
              <path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"></path>
            </svg>
            All Members
          <% end %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-56 max-h-80 overflow-y-auto">
          <li>
            <%= link_to insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], sort: params[:sort]), class: "gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-5">
                <path d="M18 21a8 8 0 0 0-16 0"></path>
                <circle cx="10" cy="8" r="5"></circle>
                <path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"></path>
              </svg>
              All Members
            <% end %>
          </li>
          <li class="menu-title text-xs mt-2">Team Members</li>
          <% @members.each do |member| %>
            <li>
              <%= link_to insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], sort: params[:sort], member_id: member.id), class: "gap-2 #{'bg-base-200' if @selected_member&.id == member.id}" do %>
                <%= user_avatar_or_initials(member, size: "w-6") %>
                <span class="truncate"><%= member.name %></span>
                <% if member == Current.user %>
                  <span class="badge badge-outline badge-xs">You</span>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-sm text-base-content/70">Sort:</span>
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-sm btn-ghost">
          <%= case params[:sort]
              when "oldest" then "Oldest First"
              when "updated" then "Recently Updated"
              else "Newest First"
              end %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-48">
          <li><%= link_to "Newest First", insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], member_id: params[:member_id]) %></li>
          <li><%= link_to "Oldest First", insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], member_id: params[:member_id], sort: "oldest") %></li>
          <li><%= link_to "Recently Updated", insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], member_id: params[:member_id], sort: "updated") %></li>
        </ul>
      </div>
    </div>

    <%= form_with url: insight_items_path, method: :get, class: "flex gap-2 ml-auto", data: { turbo_frame: "_top" } do |form| %>
      <%= form.hidden_field :audience, value: params[:audience] %>
      <%= form.hidden_field :sort, value: params[:sort] %>
      <%= form.hidden_field :member_id, value: params[:member_id] %>
      <%= form.text_field :q, value: params[:q], placeholder: "Search insights...", class: "input input-bordered input-sm w-64" %>
      <%= form.submit "Search", class: "btn btn-sm btn-ghost" %>
    <% end %>
  </div>

  <% if params[:tag].present? || @selected_member %>
    <div class="mb-4 flex flex-wrap gap-3 items-center">
      <% if params[:tag].present? %>
        <div class="flex items-center gap-2">
          <span class="text-sm text-base-content/70">Tag:</span>
          <span class="badge badge-primary"><%= params[:tag] %></span>
          <%= link_to insight_items_path(audience: params[:audience], q: params[:q], member_id: params[:member_id], sort: params[:sort]), class: "btn btn-ghost btn-xs" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-3">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
      <% if @selected_member %>
        <div class="flex items-center gap-2">
          <span class="text-sm text-base-content/70">By:</span>
          <div class="badge badge-secondary gap-2">
            <%= user_avatar_or_initials(@selected_member, size: "w-4") %>
            <%= @selected_member.name %>
          </div>
          <%= link_to insight_items_path(audience: params[:audience], q: params[:q], tag: params[:tag], sort: params[:sort]), class: "btn btn-ghost btn-xs" do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-3">
              <path d="M18 6 6 18"></path>
              <path d="m6 6 12 12"></path>
            </svg>
          <% end %>
        </div>
      <% end %>
      <% if @has_filters %>
        <%= link_to "Clear all filters", insight_items_path, class: "text-sm link link-hover ml-auto" %>
      <% end %>
    </div>
  <% end %>

  <% if @insight_items.empty? %>
    <div class="card bg-base-100 shadow">
      <div class="card-body text-center py-12">
        <% if @has_filters %>
          <p class="text-base-content/70">No insights match your filters.</p>
          <div class="card-actions justify-center mt-4">
            <%= link_to "Clear Filters", insight_items_path, class: "btn btn-ghost" %>
          </div>
        <% elsif @user_drafts > 0 %>
          <p class="text-base-content/70">You have <%= pluralize(@user_drafts, "draft") %> ready to share.</p>
          <div class="card-actions justify-center mt-4">
            <%= link_to "View My Insights", my_insights_path, class: "btn btn-primary" %>
          </div>
        <% elsif authenticated? %>
          <p class="text-base-content/70">No insights yet. Start by creating one.</p>
          <div class="card-actions justify-center mt-4">
            <%= link_to "Create Insight", new_insight_item_path, class: "btn btn-primary" %>
          </div>
        <% else %>
          <p class="text-base-content/70">No insights published yet.</p>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-live-updates-target="list">
      <% @insight_items.each do |insight_item| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
          <div class="card-body">
            <h2 class="card-title">
              <%= link_to insight_item.title, insight_item, class: "link link-hover" %>
            </h2>
            <p class="text-base-content/70 line-clamp-2"><%= insight_item.description %></p>

            <div class="mt-2 space-y-2">
              <div class="flex flex-wrap gap-2">
                <span class="badge badge-outline gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                  <%= insight_item.audience.humanize %>
                </span>
                <% if insight_item.comments_count > 0 %>
                  <span class="badge badge-ghost gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    <%= insight_item.comments_count %>
                  </span>
                <% end %>
              </div>
              <% if insight_item.tags.any? %>
                <div class="flex flex-wrap gap-1">
                  <% insight_item.tags.each do |tag| %>
                    <%= link_to tag, insight_items_path(tag: tag), class: "badge badge-ghost hover:badge-primary" %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="card-actions justify-between items-center mt-4">
              <span class="text-sm text-base-content/60">
                by <%= insight_item.user.name %> &middot; <%= time_ago_in_words(insight_item.published_at) %> ago
              </span>
              <%= link_to "View", insight_item, class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex justify-center mt-8">
      <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
  <% end %>
</div>
