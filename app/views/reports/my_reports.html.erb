<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">My Reports</h1>
    <%= link_to "New Report", new_report_path, class: "btn btn-primary" %>
  </div>

  <% if @reports.empty? %>
    <div class="text-center py-12">
      <p class="text-base-content/60 text-lg">You haven't created any reports yet.</p>
      <p class="mt-2">
        <%= link_to "Create your first report", new_report_path, class: "link link-primary" %>
      </p>
    </div>
  <% else %>
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Audience</th>
            <th>Status</th>
            <th>Files</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr>
              <td>
                <%= link_to report.title, report, class: "link link-hover font-semibold" %>
              </td>
              <td>
                <span class="badge badge-outline badge-sm"><%= report.audience.humanize %></span>
              </td>
              <td>
                <% if report.published? %>
                  <span class="badge badge-success badge-sm">Published</span>
                <% else %>
                  <span class="badge badge-warning badge-sm">Draft</span>
                <% end %>
              </td>
              <td><%= report.report_files.count %></td>
              <td><%= time_ago_in_words(report.created_at) %> ago</td>
              <td class="flex gap-2">
                <%= link_to "Edit", edit_report_path(report), class: "btn btn-ghost btn-xs" %>
                <% if report.draft? %>
                  <%= button_to "Publish", publish_report_path(report), method: :post, class: "btn btn-success btn-xs" %>
                <% else %>
                  <%= button_to "Unpublish", unpublish_report_path(report), method: :post, class: "btn btn-warning btn-xs" %>
                <% end %>
                <%= button_to "Delete", report, method: :delete, class: "btn btn-error btn-xs", data: { turbo_confirm: "Are you sure you want to delete this report?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
