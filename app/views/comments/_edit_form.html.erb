<%# Edit form for existing comments %>
<%= turbo_frame_tag "edit_comment_#{comment.id}" do %>
  <%= form_with model: comment, url: insight_item_comment_path(insight_item, comment), method: :patch, class: "space-y-3" do |f| %>
    <% if comment.errors.any? %>
      <div class="alert alert-error text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <span><%= comment.errors.full_messages.to_sentence %></span>
      </div>
    <% end %>

    <div class="form-control">
      <%= f.text_area :body,
          class: "textarea textarea-bordered w-full min-h-[80px] text-sm",
          rows: 3,
          required: true %>
    </div>

    <div class="flex justify-end gap-2">
      <button type="button"
              class="btn btn-ghost btn-sm"
              data-action="click->comments#hideEditForm"
              data-comment-id="<%= comment.id %>">
        Cancel
      </button>
      <%= f.submit "Save", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
<% end %>

