<!-- Full-screen container with diagonal background -->
<div class="min-h-screen relative overflow-hidden">
  <!-- Base background - white -->
  <div class="absolute inset-0 bg-white"></div>

  <!-- Two diagonal color bands - lower left, steep angle -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Lightest grey band (outermost) -->
    <div class="absolute -bottom-[28%] -left-[30%] w-[160%] h-[70%] origin-center rotate-[-18deg] bg-[#f5f7f9]"></div>
    <!-- Medium grey band -->
    <div class="absolute -bottom-[38%] -left-[30%] w-[160%] h-[55%] origin-center rotate-[-18deg] bg-[#eef1f4]"></div>
  </div>

  <!-- Content container -->
  <div class="relative z-10 min-h-screen flex items-center justify-center px-6 py-16">
    <div class="w-full max-w-6xl flex flex-col lg:flex-row items-center lg:items-start gap-16 lg:gap-20">

      <!-- Left side: Branding -->
      <div class="lg:w-1/2 space-y-6 text-center lg:text-left">
        <!-- Logo with text - tighter spacing -->
        <div class="flex items-center gap-4 justify-center lg:justify-start mb-2">
          <%= image_tag "logo_h_100.svg", class: "h-16 lg:h-20", alt: "insAIght Hub" %>
          <span class="text-4xl lg:text-5xl font-medium text-[#10325B] tracking-tight">ins<span class="font-bold text-[#38BDF8]">AI</span>ght Hub</span>
        </div>

        <!-- Tagline - stronger weight, better line-height -->
        <h1 class="text-3xl lg:text-[2.75rem] font-semibold text-[#10325B] leading-tight tracking-tight">
          Because understanding<br>beats output
        </h1>

        <!-- Description - softer text, better spacing -->
        <p class="text-base lg:text-lg text-[#64748b] leading-relaxed max-w-md">
          Turn scattered AI output <span class="font-semibold text-[#1e293b]">into shared</span> understanding —
          structured, searchable, and easy to act on.
        </p>

        <!-- Hero illustration - anchored with subtle background -->
        <div class="pt-4">
          <%= image_tag "hero_illustration.png", class: "w-full max-w-md mx-auto lg:mx-0", alt: "Scattered AI Output to Shared Understanding" %>
        </div>
      </div>

      <!-- Right side: Sign in card - refined with more padding and softer shadow -->
      <div class="w-full max-w-sm lg:max-w-md">
        <div class="bg-white rounded-2xl shadow-[0_4px_40px_rgba(0,0,0,0.08)] p-8 lg:p-10">
          <!-- Header - bolder title -->
          <div class="space-y-2 mb-8">
            <h2 class="text-2xl font-bold text-[#10325B] tracking-tight">Sign In</h2>
            <p class="text-[#64748b] text-sm leading-relaxed">Access your insights with your insAIght Hub credentials.</p>
          </div>

          <% if alert = flash[:alert] %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl mb-6 text-sm">
              <%= alert %>
            </div>
          <% end %>

          <% if notice = flash[:notice] %>
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl mb-6 text-sm">
              <%= notice %>
            </div>
          <% end %>

          <%= form_with url: session_url, class: "space-y-6" do |form| %>
            <!-- Email field with icon -->
            <div>
              <label class="block text-sm font-medium text-[#1e293b] mb-2" for="email_address">
                Email address
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-[#94a3b8]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "you@company.com", value: params[:email_address], class: "w-full pl-12 pr-4 py-3.5 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#183C67] focus:border-transparent transition text-sm" %>
              </div>
            </div>

            <!-- Password field -->
            <div>
              <div class="flex justify-between items-center mb-2">
                <label class="block text-sm font-medium text-[#1e293b]" for="password">
                  Password
                </label>
                <%= link_to "Forgot password?", new_password_path, class: "text-sm text-[#64748b] hover:text-[#183C67] transition" %>
              </div>
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "••••••", maxlength: 72, class: "w-full px-4 py-3.5 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#183C67] focus:border-transparent transition text-sm" %>
            </div>

            <!-- Remember me - better alignment -->
            <div class="flex items-center gap-3">
              <%= form.check_box :remember_me, class: "w-5 h-5 rounded border-gray-300 text-[#183C67] focus:ring-[#183C67] cursor-pointer", checked: true %>
              <%= form.label :remember_me, "Remember me", class: "text-sm text-[#1e293b] cursor-pointer select-none" %>
            </div>

            <!-- Submit button - enhanced depth -->
            <div class="pt-2">
              <%= form.submit "Sign In", class: "w-full py-3.5 px-4 bg-[#183C67] hover:bg-[#1e4a7d] text-white font-semibold rounded-xl transition-all duration-200 cursor-pointer shadow-[0_4px_14px_rgba(24,60,103,0.35)] hover:shadow-[0_6px_20px_rgba(24,60,103,0.4)]" %>
            </div>
          <% end %>

          <!-- Request access - with divider and underline -->
          <div class="relative mt-8">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-100"></div>
            </div>
            <div class="relative flex justify-center">
              <p class="bg-white px-4 text-sm text-[#64748b]">
                No account? <a href="mailto:admin@example.com" class="text-[#183C67] hover:text-[#1e4a7d] font-medium underline underline-offset-2 transition">Request access</a>
              </p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
